---
import mainimage from "../assets/test-min.png";
---

<div class="main">
    <div class="container">
        <h1 class="titleMain">
            CRÉATION ET REFONTE<br /> DE SITES INTERNET OPTIMISÉS
        </h1>
        <div class="subtitleMain">
            J’aime créer des sites internet ou améliorer des sites existants
            pour les rendre les plus performant et optimisés possible. Objectif
            100/100 de note Google.
        </div>
    </div>
    <div>
        <div class="img">
            <div class="middle">
                <div class="middleImage container">
                    <img
                        width="100%"
                        height="auto"
                        src={mainimage}
                        alt="image description"
                    />
                </div>
            </div>
        </div>
    </div>
    <div class="borderLine">
        <div class="contentBorderLine container">
            <div class="borderLineItem">
                <div class="blTitle">10 <div class="blue">+</div></div>
                <div class="blDesc">Projets réalisés</div>
            </div>
            <div class="borderLineItem">
                <div class="blTitle">90<div class="green">+</div></div>
                <div class="blDesc">Score moyen /100 par Google</div>
            </div>
            <div class="borderLineItem">
                <div class="blTitle">9M<div class="red">+</div></div>
                <div class="blDesc">Utilisateurs qui ont visités les sites</div>
            </div>
        </div>
    </div>
    <div class="end">
        <div class="container">
            <div class="services">Voir mes services</div>
        </div>
    </div>
</div>
<style>
    .services {
        padding: 16px 32px;
        width: fit-content;
        background-color: rgba(112, 255, 0, 0.2);
        border-radius: 5px;
        color: white;
        font-size: 20px;
        margin-left: auto;
        margin-right: auto;
    }
    h1 {
        margin-top: 100px;
        margin-bottom: 15px;
    }
    .main {
        height: calc(100vh - 70px);
        /* ADDED */
        display: flex;
        flex-direction: column;
        place-content: space-evenly;
    }
    .titleMain {
        text-transform: uppercase;
        font-weight: 700;
        line-height: 57px;

        background: linear-gradient(
                180deg,
                rgba(112, 255, 0, 0.2) 0%,
                rgba(0, 0, 0, 0.2) 100%
            ),
            #6a6a6a;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
        font-size: 50px;
    }
    .img {
        background: linear-gradient(
            180deg,
            transparent 0,
            transparent 50%,
            #10120e 0,
            #10120e 100%
        );
    }
    .middleLine {
        background-color: #10120e;
        height: 100%;
        width: 100%;
    }
    .middleImage {
    }
    .subtitleMain {
        color: #717171;
        font-weight: 700;
        font-size: 20px;
        line-height: 23px;
    }
    .borderLine {
        background-color: #10120e;
        width: 100%;
        display: flex;
        height: 100%;
        align-items: center;
    }
    .contentBorderLine {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
    }
    .borderLineItem {
        font-weight: 700;
        font-size: 50px;
        line-height: 57px;
        color: white;
        text-align: center;
    }
    .blTitle {
        display: flex;
        justify-content: center;
    }
    .red {
        color: #ff5454;
    }
    .blue {
        color: #39f3ff;
    }
    .green {
        color: #53f1af;
    }
    .blDesc {
        font-size: initial;
    }
    .end {
        height: 100%;
        background-color: #10120e;
        display: flex;
        align-items: center;
    }
</style>
